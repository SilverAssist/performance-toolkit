{
  "name": "@silverassist/performance-toolkit",
  "version": "0.1.0",
  "description": "PageSpeed Insights and Lighthouse CI integration for performance monitoring across SilverAssist projects",
  "author": "Miguel Colmenares <me@miguelcolmenares.com>",
  "license": "PolyForm Noncommercial License 1.0.0",
  "type": "module",
  "overrides": {
    "cookie": "^0.7.2",
    "tmp": "^0.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SilverAssist/performance-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/SilverAssist/performance-toolkit/issues"
  },
  "homepage": "https://github.com/SilverAssist/performance-toolkit#readme",
  "keywords": [
    "pagespeed",
    "lighthouse",
    "performance",
    "core-web-vitals",
    "lcp",
    "fcp",
    "cls",
    "tbt",
    "nextjs",
    "ci-cd",
    "monitoring"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "perf-check": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./pagespeed": {
      "import": {
        "types": "./dist/pagespeed/index.d.mts",
        "default": "./dist/pagespeed/index.mjs"
      },
      "require": {
        "types": "./dist/pagespeed/index.d.ts",
        "default": "./dist/pagespeed/index.js"
      }
    },
    "./lighthouse": {
      "import": {
        "types": "./dist/lighthouse/index.d.mts",
        "default": "./dist/lighthouse/index.mjs"
      },
      "require": {
        "types": "./dist/lighthouse/index.d.ts",
        "default": "./dist/lighthouse/index.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/types/index.d.mts",
        "default": "./dist/types/index.mjs"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/types/index.js"
      }
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\" \"bin/**/*.js\"",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "release": "npm run prepublishOnly && npm publish --access public"
  },
  "peerDependencies": {
    "@lhci/cli": ">=0.12.0"
  },
  "peerDependenciesMeta": {
    "@lhci/cli": {
      "optional": true
    }
  },
  "dependencies": {
    "chalk": "^5.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@lhci/cli": "^0.15.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
